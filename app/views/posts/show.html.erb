<p id="notice"><%= notice %></p>
<div class="post">
  <h3><%= @post.subject %> <small class="pull-right"><%= @post.date %></small></h3>
  <div class="row">
    <div class="col-md-7">
    <%= @post.subject %>
    </div>
    <div>
    </div>
    <!-- 写真機能はここから -->
    <div class="col-md-7">
    <%= image_tag(@post.picture_url) if @post.picture.present? %>
    </div>
    <!-- 写真機能はここまでに！ -->
    <div class="col-md-5">
    </div>
  
    <div class="col-md-7">
    <%= link_to @post.video_url.to_s do %>
      <%= image_tag(@post.video_url(:screenshot).to_s, id: "video") %>
    <% end %>
    </div>
  </div>

    <% @documents.each do |document| %>
        <div>
        <p><%= document.text %></p>
        <p><%= document.picture %></p>
        <p><%= document.video %></p>
        <% if admin_user.signed_in? %>
            <p><%= link_to 'Delete', document_path(document), method: :delete, data: { confirm: '削除してもよろしいですか？' } %></p>
        <% end %>
         </div>
    <% end %>
    <%= render 'documents/form' %>

<%= link_to 'Edit', edit_posts_path(@post) %> |
<%= link_to 'Back', posts_path %>

<div class="clearfix">
<p class="pull-right">
<% if admin_user_signed_in? %>
<%= link_to '編集', edit_post_path(@post), :class => "btn btn-success" %>
<% else %>
<% end %>
<%= link_to '戻る', posts_path, :class => "btn btn-warning" %>
</p>
</div>

</div>
